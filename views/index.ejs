<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UV Index & Sunscreen Check</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>UV Index & Sunscreen Check</h1>

    <div class="uv-box">
        <h2>Today's UV Index: <%= uvIndex !== null ? uvIndex : "Unavailable" %></h2>
        <h3><%= sunscreenAdvice %></h3>
    </div>

    <p>Note: If UV index is 3 or higher, it's recommended to apply sunscreen!</p>
     
    <div id="btn">
        <button id="getUvBtn">Check UV Index Based on My Location</button>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        document.getElementById('getUvBtn').addEventListener('click', function() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(successCallback, errorCallback);
            } else {
                alert("Geolocation is not supported by your browser.");
            }
        });

            async function successCallback(position) {
            const lat = position.coords.latitude;
            const lon = position.coords.longitude;

            try {
                const response = await axios.get(`/check-uv`, {
                    params: {
                        lat: lat,
                        lon: lon
                    }
                });

                const data = response.data;
                alert(`UV Index: ${data.uvIndex}, Advice: ${data.sunscreenAdvice}`);


                document.querySelector('.uv-box h2').innerText = `Today's UV Index: ${data.uvIndex}`;
                document.querySelector('.uv-box h3').innerText = data.sunscreenAdvice;

            } catch (error) {
                console.error('Error fetching UV index:', error);
            }
        }

        function errorCallback(error) {
            alert("Error getting location: " + error.message);
        }
    </script>
</body>
</html>
